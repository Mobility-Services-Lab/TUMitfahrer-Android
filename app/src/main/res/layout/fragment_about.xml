<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/about_background"
        android:background="@drawable/about1"
        android:layout_width="fill_parent"
        android:scaleType="centerCrop"
        android:src="@color/transparent_black"
        android:layout_height="fill_parent" />

    <ImageView
        android:id="@+id/about_image"
        android:src="@drawable/about_campus"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/about_heading"
        android:gravity="center"
        android:layout_below="@id/about_image"
        android:textColor="@color/white"
        android:singleLine="true"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Large"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="Hello world"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <de.tum.mitfahr.widget.FontTextView
        android:layout_below="@id/about_heading"
        android:id="@+id/about_description"
        android:layout_marginTop="12dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:text="Hello world"
        app:font="roboto_light"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
